<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <TypeScriptToolsVersion>3.1</TypeScriptToolsVersion>
    <LangVersion>latest</LangVersion>
    <OutputType>Library</OutputType>
    <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
    <StartupObject></StartupObject>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.1.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Signum.Analyzer" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Framework\Signum.Engine\Signum.Engine.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.Entities\Signum.Entities.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.React\Signum.React.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.Utilities\Signum.Utilities.csproj" />
    <ProjectReference Include="..\Signum.Engine.Extensions\Signum.Engine.Extensions.csproj" />
    <ProjectReference Include="..\Signum.Entities.Extensions\Signum.Entities.Extensions.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="**\*.tsx" />
    <TypeScriptCompile Include="**\*.ts" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Chart\D3Scripts\Force graph.tsx" />
    <None Remove="Chart\D3Scripts\Heatmap.tsx" />
    <None Remove="Chart\D3Scripts\WorldMap.tsx" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Remove="Chart\D3ChartBase.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\BubblePack.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Bubbleplot.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\CalendarStream.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Columns.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\ForceGraph.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Line.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Markermap.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\MultiBars.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\MultiColumns.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\MultiLines.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\ParallelCordiantes.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Pie.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Punchcard.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Scatterplot.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\StackedBars.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\StackedColumns.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\StackedLines.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\TreeMap.tsx" />
    <TypeScriptCompile Remove="Chart\GoogleMapScripts\GoogleMapsChartUtils.tsx" />
    <TypeScriptCompile Remove="Chart\GoogleMapScripts\Heatmap.tsx" />
  </ItemGroup>

  <ItemGroup>
    <None Include="node_modules\%40types\googlemaps\index.d.ts" />
  </ItemGroup>

  <Target Name="GenerateSignumTS">
    <WriteLinesToFile File="$(BaseIntermediateOutputPath)SignumReferences.txt" Lines="@(ReferencePath)" Overwrite="true" Encoding="Unicode" />
    <WriteLinesToFile File="$(BaseIntermediateOutputPath)SignumContent.txt" Lines="@(Content);@(None)" Overwrite="true" Encoding="Unicode" />
    <Exec command="dotnet &quot;..\..\Framework\Signum.TSGenerator\Binaries\netcoreapp2.1\Signum.TSGenerator.dll&quot; &quot;@(IntermediateAssembly)&quot; &quot;$(BaseIntermediateOutputPath)SignumReferences.txt&quot; &quot;$(BaseIntermediateOutputPath)SignumContent.txt&quot;" ConsoleToMSBuild="false">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfExec" />
    </Exec>
  </Target>

  <PropertyGroup>
    <CompileTypeScriptDependsOn>
      GenerateSignumTS;
      $(CompileTypeScriptDependsOn);
    </CompileTypeScriptDependsOn>
    <ApplicationIcon />
  </PropertyGroup>

</Project>
