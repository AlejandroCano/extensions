<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <TypeScriptToolsVersion>3.5</TypeScriptToolsVersion>
    <LangVersion>preview</LangVersion>
    <OutputType>Library</OutputType>
    <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
    <StartupObject></StartupObject>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Platforms>x64;x86;AnyCPU;linux64;win64;win86</Platforms>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>1701;1702;8618</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='win64'">
    <!--https://github.com/dotnet/core/issues/1039-->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='win86'">
    <!--https://github.com/dotnet/core/issues/1039-->
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <PlatformTarget>x86</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='linux64'">
    <!--https://github.com/dotnet/core/issues/1039-->
    <RuntimeIdentifier>linux-64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.5.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Signum.Analyzer" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Signum.TSGenerator" Version="2.0.2" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Framework\Signum.Engine\Signum.Engine.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.Entities\Signum.Entities.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.React\Signum.React.csproj" />
    <ProjectReference Include="..\..\Framework\Signum.Utilities\Signum.Utilities.csproj" />
    <ProjectReference Include="..\Signum.Engine.Extensions\Signum.Engine.Extensions.csproj" />
    <ProjectReference Include="..\Signum.Entities.Extensions\Signum.Entities.Extensions.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="**\*.tsx" />
    <TypeScriptCompile Include="**\*.ts" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ts_out\**" />
    <EmbeddedResource Remove="ts_out\**" />
    <None Remove="ts_out\**" />
    <TypeScriptCompile Remove="ts_out\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="SMS\SMSClient.tsx" />
    <None Remove="SMS\Templates\MultipleSMS.tsx" />
    <None Remove="SMS\Templates\SMSMessage.tsx" />
    <None Remove="SMS\Templates\SMSSendPackage.tsx" />
    <None Remove="SMS\Templates\SMSTemplate.tsx" />
    <None Remove="SMS\Templates\SMSUpdatePackage.tsx" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\Axis.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\InitialMessage.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\Legend.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\PivotTable.ts" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\ReactChart.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\Rule.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\Stratify.ts" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\TextEllipsis.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\Components\Ticks.tsx" />
    <TypeScriptCompile Remove="Chart\D3Scripts\ReactChartBase.tsx" />
    <TypeScriptCompile Remove="Dynamic\Api\DynamicApi.tsx" />
    <TypeScriptCompile Remove="Dynamic\DynamicApiClient.tsx" />
    <TypeScriptCompile Remove="SMS\Templates\MultipleSMS.tsx" />
    <TypeScriptCompile Remove="SMS\Templates\SMSSendPackage.tsx" />
    <TypeScriptCompile Remove="SMS\Templates\SMSUpdatePackage.tsx" />
    <TypeScriptCompile Remove="Toolbar\QueryToolbarConfig.tsx" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="SMS\Templates\MultipleSMS.tsx" />
    <Content Include="SMS\Templates\SMSSendPackage.tsx" />
    <Content Include="SMS\Templates\SMSUpdatePackage.tsx" />
  </ItemGroup>
  
</Project>
