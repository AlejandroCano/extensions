@using System.Reflection
@using Signum.Engine.Translation
@using Signum.Web.Translation.Controllers
@using System.Globalization;
@using Signum.Engine.Basics;
@using Signum.Entities.Translation
@model Dictionary<CultureInfo, TranslatedTypeSummary>
@{
    Lite<Entity> instance = ViewBag.Instance;
    ViewBag.Title = "{0} - {1}".Formato(instance.ToString(), TranslationMessage.InstanceTranslations.NiceToString());        
}

@Html.ScriptCss("~/Translation/Content/Translation.css")

@if (Model.IsEmpty())
{
    <h2>@TranslationMessage.NothingToTranslate.NiceToString()</h2>   
}
else
{
    <h2>@ViewBag.Title</h2>
    
    var langs = Model.Keys;

    <table class="st">
        <tr>
            <th></th>
            <th>@TranslationMessage.All.NiceToString()</th>
            @foreach (var ci in langs)
            {
                <th>@ci.Name</th>
            }
        </tr>
        <tr>
            <th>@instance.ToString()</th>

            <td>
                @Html.ActionLink(TranslationMessage.View.NiceToString(), (TranslatedInstanceController tc) => tc.ViewEntity(instance, null, true, null))
            </td>
            @foreach (var ci in langs)
            {
                var tf = Model[ci];
                
                <td>
                    @if (ci.Name == TranslatedInstanceLogic.DefaultCulture.Name)
                    {
                        <text>@TranslationMessage.None.NiceToString()</text>
                    }
                    else
                    {
                        @Html.ActionLink(TranslationMessage.View.NiceToString(), (TranslatedInstanceController tc) => tc.ViewEntity(instance, ci.Name, true, null))
                        <br />
                        if (tf.State != null)
                        {
                            @Html.ActionLink(TranslationMessage.Sync.NiceToString(), (TranslatedInstanceController tc) => tc.SyncEntity(instance, tf.CultureInfo.Name), new { @class = "status-" + tf.State.ToString() })
                        }
                    }
                </td>
            }
        </tr>
    </table>
}